{
  "name": "requirements-tracker",
  "publisher": "tech-wave-swe",
  "description": "Requirements Tracker - A Webview View API Sample",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "engines": {
    "vscode": "^1.95.0"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "requirementsTracker",
          "title": "Requirements Tracker",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "requirementsTracker": [
        {
          "type": "webview",
          "id": "requirementsTracker.trackerView",
          "name": "Requirements"
        }
      ]
    },
    "commands": [
      {
        "command": "requirements-tracker.openSidebar",
        "title": "ReqTracker: Open Requirements Tracker Sidebar"
      },
      {
        "command": "requirements-tracker.interrogate",
        "title": "ReqTracker: Interrogate LLM on Requirements"
      },
      {
        "command": "requirements-tracker.settings",
        "title": "ReqTracker: Open Settings"
      },
      {
        "command": "requirements-tracker.debug-settings",
        "title": "ReqTracker: Debug settings"
      }
    ],
    "configuration": [
      {
        "title": "Requirements Tracker",
        "properties": {
          "reqTracker.endpoint": {
            "type": "string",
            "default": "http://127.0.0.1:11434",
            "description": "Ollama Server Endpoint URL",
            "order": 1
          },
          "reqTracker.model": {
            "type": "string",
            "enum": [
              "qwen2.5-coder:7b",
              "stable-code:3b",
              "codellama:7b",
              "deepseek-coder-v2:16b",
              "custom"
            ],
            "default": "qwen2.5-coder:7b",
            "description": "Ollama model to use",
            "order": 2
          },
          "reqTracker.custom-model": {
            "type": "string",
            "default": "",
            "description": "Custom model name",
            "order": 3
          },
          "reqTracker.embeddingModel": {
            "type": "string",
            "enum": [
              "mxbai-embed-large",
              "nomic-embed-text",
              "all-minilm",
              "custom"
            ],
            "default": "nomic-embed-text",
            "description": "Ollama model to use for embeddings",
            "order": 4
          },
          "reqTracker.custom-embeddingModel": {
            "type": "string",
            "default": "",
            "description": "Custom embedding model name",
            "order": 5
          },
          "reqTracker.temperature": {
            "type": "number",
            "default": 0.3,
            "description": "Temperature of the model, high temperatures make the model answer more creatively.",
            "order": 6
          },
          "reqTracker.bearerToken": {
            "type": "string",
            "default": "",
            "description": "(Optional) Auth Bearer token for secure requests.",
            "order": 7
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint",
    "watch": "tsc -w -p ./"
  },
  "devDependencies": {
    "@eslint/js": "9.15.0",
    "@stylistic/eslint-plugin": "2.11.0",
    "@types/node": "^22.10.2",
    "@types/vscode": "1.95.0",
    "eslint": "9.15.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "8.15.0"
  },
  "dependencies": {
    "@langchain/ollama": "^0.1.3",
    "ollama": "^0.5.11"
  }
}
